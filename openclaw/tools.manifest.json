{
  "name": "project-memory-tools",
  "version": "0.1.0",
  "description": "OpenClaw command tools backed by local Project Memory database",
  "command": "node",
  "args": ["openclaw/bridge.js"],
  "tools": [
    {
      "name": "project_memory_search",
      "description": "Search memories",
      "arguments_schema": {
        "type": "object",
        "properties": {
          "query": { "type": "string" },
          "project": { "type": "string" },
          "limit": { "type": "number" }
        },
        "required": ["query"]
      }
    },
    {
      "name": "project_memory_save",
      "description": "Save a memory",
      "arguments_schema": {
        "type": "object",
        "properties": {
          "content": { "type": "string" },
          "sourceType": { "type": "string" },
          "sourceUrl": { "type": "string" },
          "project": { "type": "string" }
        },
        "required": ["content"]
      }
    },
    {
      "name": "project_memory_recent",
      "description": "List recent memories",
      "arguments_schema": {
        "type": "object",
        "properties": {
          "limit": { "type": "number" }
        }
      }
    },
    {
      "name": "project_memory_context",
      "description": "Generate context brief",
      "arguments_schema": {
        "type": "object",
        "properties": {
          "task": { "type": "string" },
          "project": { "type": "string" },
          "limit": { "type": "number" }
        },
        "required": ["task"]
      }
    },
    {
      "name": "project_memory_ask",
      "description": "Ask grounded question",
      "arguments_schema": {
        "type": "object",
        "properties": {
          "question": { "type": "string" },
          "project": { "type": "string" },
          "limit": { "type": "number" }
        },
        "required": ["question"]
      }
    },
    {
      "name": "project_memory_ingest_processed",
      "description": "Ingest processed markdown into versioned memory storage",
      "arguments_schema": {
        "type": "object",
        "properties": {
          "filename": { "type": "string" },
          "markdown": { "type": "string" },
          "sourcePath": { "type": "string" },
          "externalSourceId": { "type": "string" },
          "agentfsUri": { "type": "string" }
        },
        "required": ["filename", "markdown"]
      }
    },
    {
      "name": "project_memory_records",
      "description": "List extracted/versioned memory records",
      "arguments_schema": {
        "type": "object",
        "properties": {
          "limit": { "type": "number" }
        }
      }
    },
    {
      "name": "project_memory_export_date_range_markdown",
      "description": "Export memories for a date range to a markdown file grouped by kind",
      "arguments_schema": {
        "type": "object",
        "properties": {
          "startDate": { "type": "string" },
          "endDate": { "type": "string" },
          "limit": { "type": "number" }
        },
        "required": ["startDate", "endDate"]
      }
    }
  ]
}
